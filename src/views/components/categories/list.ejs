<div class="content"></div>
<div class="container-fluid">
  <div class="flex items-center justify-content-between mb-5">
    <h4 class="page-title">Danh sách loại sản phẩm</h4>
    <button class="flex-row btn btn-default" href="/categories/create">Tạo loại sản phẩm</button>
  </div>
  <div class="card">

    <div class="card-body">
      <table class="table table-head-bg-success">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Image</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(function(category, index){ %>
            
              <tr>
                <td>
                  <%=index%>
                </td>
                <td>
                  <img src="<%=category.image%>" alt="image" class="category-label" />
                </td>
                <td>
                  <%=category.code%>
                </td>
                <td>
                  <%=category.name%>
                </td>
                <td> 
                  <a class="btn btn-primary btn-sm" href="/categories/update/<%=category._id%>">Sửa</a>
                  <a class="btn btn-danger btn-sm" href="/categories/delete/<%=category._id%>">Xóa</a>
                </td>

              </tr>
              <% }); %>


        </tbody>
      </table>

    </div>
  </div>
</div>
</div>